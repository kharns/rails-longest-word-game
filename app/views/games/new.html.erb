<div class="contain">
  <h1>NEW GAME</h1>
  <ul class="letters-list-inline">
    <% @letters.each do |letter| %>
      <li class="letters-list"><%= letter %></li>
    <% end %>
  </ul>

  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag 'letters', @letters %>
    <!-- ... -->
    <label class="form-label">What is the longest word you can find?</label>
    <input type="text" class="form-control" name="word">
    <button type="submit" class="btn btn-secondary" value="Play"></button>
  </form>

</div>
